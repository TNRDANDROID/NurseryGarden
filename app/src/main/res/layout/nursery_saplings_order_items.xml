<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="adapter"
            type="com.nic.nurserygarden.adapter.SellSpeciesAdapter" />
    </data>

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_7sdp"
            android:layout_marginRight="@dimen/_7sdp"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_marginBottom="@dimen/_7sdp"
            app:cardCornerRadius="@dimen/_7sdp"
            app:cardElevation="@dimen/_7sdp">

            <LinearLayout
                android:layout_margin="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:textColor="@color/blue_background"
                        android:textSize="@dimen/_11sdp"
                        android:textAlignment="textStart"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:text="Batch Number"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:textColor="@color/blue_background"
                        android:textSize="@dimen/_11sdp"
                        android:textAlignment="center"
                        android:text=":"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.4"
                        android:id="@+id/batch_number"
                        android:textColor="@color/blue_background"
                        android:textSize="@dimen/_11sdp"
                        android:textAlignment="textStart"
                        android:layout_marginStart="@dimen/_4sdp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:textColor="@color/blue_background"
                        android:textSize="@dimen/_11sdp"
                        android:textAlignment="textStart"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:text="Species Name"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:textColor="@color/blue_background"
                        android:textSize="@dimen/_11sdp"
                        android:textAlignment="center"
                        android:text=":"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.4"
                        android:id="@+id/species_name"
                        android:textColor="@color/blue_background"
                        android:textSize="@dimen/_11sdp"
                        android:textAlignment="textStart"
                        android:layout_marginStart="@dimen/_4sdp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:textColor="@color/blue_background"
                        android:textSize="@dimen/_11sdp"
                        android:textAlignment="textStart"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:text="Days"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:textColor="@color/blue_background"
                        android:textSize="@dimen/_11sdp"
                        android:textAlignment="center"
                        android:text=":"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.4"
                        android:id="@+id/days"
                        android:textColor="@color/blue_background"
                        android:textSize="@dimen/_11sdp"
                        android:textAlignment="textStart"
                        android:layout_marginStart="@dimen/_4sdp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:textColor="@color/blue_background"
                        android:textSize="@dimen/_11sdp"
                        android:textAlignment="textStart"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:text="Height"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:textColor="@color/blue_background"
                        android:textSize="@dimen/_11sdp"
                        android:textAlignment="center"
                        android:text=":"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.4"
                        android:id="@+id/height"
                        android:textColor="@color/blue_background"
                        android:textSize="@dimen/_11sdp"
                        android:textAlignment="textStart"
                        android:layout_marginStart="@dimen/_4sdp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:textColor="@color/blue_background"
                        android:textSize="@dimen/_11sdp"
                        android:textAlignment="textStart"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:text="Available Saplings"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:textColor="@color/blue_background"
                        android:textSize="@dimen/_11sdp"
                        android:textAlignment="center"
                        android:text=":"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.4"
                        android:id="@+id/available_count"
                        android:textColor="@color/blue_background"
                        android:textSize="@dimen/_11sdp"
                        android:textAlignment="textStart"
                        android:layout_marginStart="@dimen/_4sdp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:textColor="@color/blue_background"
                        android:textSize="@dimen/_11sdp"
                        android:textAlignment="textStart"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:text="Required Saplings"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:textColor="@color/blue_background"
                        android:textSize="@dimen/_11sdp"
                        android:textAlignment="center"
                        android:text=":"/>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.4"
                        android:background="@drawable/cornered_border_bg_white"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <EditText
                            android:id="@+id/quantity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:background="@android:color/transparent"
                            android:hint="@string/enter_count"
                            android:inputType="number"
                            android:singleLine="true"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_11sdp"
                            style="@string/font_circular_book" />


                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>
</layout>